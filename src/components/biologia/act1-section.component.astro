---
interface Props {
  date: string;
  title: string;
  author: string;
  imageBg?: string;
}

const { date, title, author, imageBg } = Astro.props as Props;
---

<section class="relative bg-neutral-900 text-zinc-100">
  <div class="relative p-8 flex flex-col gap-8 w-full min-h-full">
    {
      imageBg && (
        <img
          class="absolute left-0 top-0 w-full h-full object-cover opacity-20"
          src={imageBg}
          alt={imageBg}
        />
      )
    }
    <div class="relative flex flex-wrap gap-4">
      <h2 class="text-6xl font-extrabold">{date}</h2>
      <p class="text-2xl">{title}</p>
    </div>
    <div
      class="flex-1 relative w-full grid place-content-center gap-4 md:gap-8"
    >
      <slot />
    </div>
    <div>
      <p class="relative text-right">{author}</p>
    </div>
  </div>
</section>
